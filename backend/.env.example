# Server Configuration
PORT=3000
NODE_ENV=development
APP_VERSION=1.0.0

# MongoDB Atlas Connection
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/aricainsights?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# SMTP Configuration (using SMTP2GO or similar)
SMTP_HOST=mail.smtp2go.com
SMTP_PORT=587
SMTP_USER=your-smtp2go-username
SMTP_PASS=your-smtp2go-password
SMTP_FROM=alerts@aricainsights.com

# Redis Configuration (for Socket.IO scaling)
REDIS_URL=redis://localhost:6379

# Reddit API (for social monitoring)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=AricaInsights/1.0

# NewsData.io API (free tier: 200 requests/day)
NEWSDATA_API_KEY=your-newsdata-api-key

# Hugging Face Token (for AI processing)
HF_TOKEN=your-huggingface-token

# Polling Configuration
POLLING_INTERVAL=*/10 * * * *
ENABLE_POLLING=false

# AI Processing (set to false to disable AI enrichment during polling)
ENABLE_AI_PROCESSING=true

# Mock Mode (set to true to use faker-generated data instead of real APIs)
MOCK_DATA=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
